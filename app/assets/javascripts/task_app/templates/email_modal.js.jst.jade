#email-modal
  .modal-header
    h4#email-modal-label Email Task List
  .modal-body
    form.form
      .form-group
        input.form-control#recipients(placeholder='Enter recipient here', ng-model='recipients')
        //p.help-block Separate recipients by a comma.
  .modal-footer
    button.btn.btn-danger(ng-click='cancel()') Cancel
    button.btn.btn-primary(ng-click='send()') Send
